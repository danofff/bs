<Page x:Class="WpfBookShop.Pages.Home.LeftMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBookShop.Pages.Home"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LeftMenu">

    <StackPanel Orientation="Vertical" Margin="10">

        <Label Content="UserName:"></Label>
        <TextBox x:Name="tbxUserName" Text="Admin"></TextBox>

        <Label Content="Password:"></Label>
        <PasswordBox x:Name="tbxPassword" Password="Admin"></PasswordBox>

        <Border CornerRadius="10">
            <Button Click="Button_Click" Margin="0 15 0 0" x:Name="SineInButton" Content="Sign In"></Button>
        </Border>
    </StackPanel>
    
</Page>
